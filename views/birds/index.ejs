<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>All Birds</title>
  <link rel="stylesheet" href="stylesheets/site.css">
</head>

<body>
  <h1>All Birds</h1>

  <!-- new bird form -->
  <form id="newBirdForm" action="/birds" method="post">
    <div>
      <input id="title" type="text" name="title" value="bird name" />
    </div>
    <div>
      <textarea id="description" name="description" rows="8" cols="80"></textarea>
    </div>

    <button>Save</button>
  </form>

  <div id="birds">
    <% birds.forEach((bird) => { %>
      <div>
        <h2><%= bird.title %></h2>
        <p class="description">
          <%= bird.description %>
        </p>
      </div>
      <% }) %>
  </div>

  <!-- <a href="/birds/new">New bird</a> -->
  
  <!-- SiteJS -->
  <script src="/javascripts/birds.js" charset="utf-8"></script>
</body>

</html>
